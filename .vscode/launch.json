  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "marketing-agent",
      "program": "${workspaceFolder}/node_modules/nx/bin/nx.js",
      "args": [
        "test",
        "marketing-agent",
        "--testPathPattern=example.spec.ts"
      ],
      "cwd": "${workspaceFolder}",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/tslib/**"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "smartStep": true
    },    {
      "type": "node",
      "request": "launch",
      "name": "pino-plugin",
      "program": "${workspaceFolder}/node_modules/nx/bin/nx.js",
      "args": [
        "test",
        "pino-plugin",
        "--testPathPattern=example.spec.ts"
      ],
      "cwd": "${workspaceFolder}",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/tslib/**"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "smartStep": true
    }
  ]
}