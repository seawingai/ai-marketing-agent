{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@marketing-service/*": ["apps/services/marketing-service/src/*"],
      "@awing/config-plugin": ["libs/config-plugin/src/index.ts"],
      "@awing/marketing-agent": ["libs/marketing-agent/src/index.ts"],
      "@awing/node-cron-plugin": ["libs/node-cron-plugin/src/index.ts"]
    }
  },
  "exclude": ["assets", "node_modules", "tmp"]
}
